<ui:FluentWindow
    x:Class="RevitTranslator.UI.Views.ProgressWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModels="clr-namespace:RevitTranslator.UI.ViewModels"
    xmlns:converters="clr-namespace:RevitTranslator.UI.Views.Converters"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewModels:ProgressWindowViewModel}"
    ExtendsContentIntoTitleBar="True"
    Width="600"
    MinHeight="150"
    SizeToContent="Height"
    ResizeMode="NoResize"
    Topmost="True"
    WindowStartupLocation="CenterScreen">

    <ui:FluentWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:WpfUiDictionary />
                <ResourceDictionary Source="../Resources/ResourceDictionaries/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Title="Revit Translator | Progress"
            ShowMinimize="True"
            ShowMaximize="False"
            CloseClicked="OnCloseClicked" />

        <Grid
            Grid.Row="1"
            Margin="20 30 20 40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Rectangle
                Grid.Column="0"
                Width="1"
                HorizontalAlignment="Right"
                Fill="LightGray" />
            <Rectangle
                Grid.Column="1"
                Width="1"
                HorizontalAlignment="Right"
                Fill="LightGray" />

            <StackPanel
                Grid.Column="0"
                Orientation="Vertical"
                VerticalAlignment="Top">
                <TextBlock
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Text="Translations completed"
                    Style="{StaticResource Annotation}" />
                <TextBlock
                    FontSize="25"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                    <Run Text="{Binding FinishedTranslationCount, FallbackValue=999}" />
                    <Run Text="/" />
                    <Run Text="{Binding TotalTranslationCount, FallbackValue=9999}" />
                </TextBlock>
            </StackPanel>

            <StackPanel
                Grid.Column="1"
                Orientation="Vertical"
                VerticalAlignment="Top">
                <TextBlock
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Text="Characters translated"
                    Style="{StaticResource Annotation}" />
                <TextBlock
                    FontSize="25"
                    Text="{Binding SessionCharacterCount, FallbackValue=9999999}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center" />
            </StackPanel>

            <Grid
                Grid.Column="2"
                VerticalAlignment="Top"
                HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <ui:TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    TextAlignment="Right"
                    Style="{StaticResource Annotation}"
                    Text="{Binding MonthlyCharacterCount}" />
                <ui:TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    TextAlignment="Right"
                    Style="{StaticResource Annotation}"
                    Text="{Binding MonthlyCharacterLimit}" />
                <ui:TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    Style="{StaticResource Annotation}"
                    Text=" ch used this month" />
                <ui:TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource Annotation}"
                    Text=" ch monthly limit" />
            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ProgressBar
                Grid.Row="0"
                Height="8"
                Margin="0 0 0 2"
                Value="{Binding FinishedTranslationCount, FallbackValue=50}"
                Maximum="{Binding TotalTranslationCount, FallbackValue=100}"
                IsIndeterminate="{Binding IsProgressBarIntermediate,
                    Mode=OneWay,
                    UpdateSourceTrigger=PropertyChanged}" />

            <Button
                Grid.Row="1"
                Command="{Binding HandleButtonClickCommand}"
                Style="{StaticResource LargeButton}"
                IsEnabled="{Binding IsMainButtonEnabled}"
                Cursor="Hand">
                <StackPanel>
                    <ui:TextBlock
                        FontTypography="Subtitle"
                        TextAlignment="Center"
                        Text="{Binding ButtonText}" />
                    <ui:TextBlock
                        TextAlignment="Center"
                        FontTypography="Caption"
                        Visibility="{Binding ButtonSubtext,
                            Converter={x:Static converters:Converters.StringToVisibilityConverter}}"
                        Text="{Binding ButtonSubtext, FallbackValue='subtext'}" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</ui:FluentWindow>