<ui:FluentWindow
    x:Class="RevitTranslator.UI.Views.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    d:DataContext="{d:DesignInstance contracts:ISettingsViewModel}"
    xmlns:contracts="clr-namespace:RevitTranslator.UI.Contracts"
    xmlns:converters="clr-namespace:RevitTranslator.UI.Views.Converters"
    xmlns:languageModels="clr-namespace:TranslationService.Models;assembly=TranslationService"
    xmlns:markup="clr-namespace:RevitTranslator.Ui.Library.Markup;assembly=RevitTranslator.Ui.Library"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    mc:Ignorable="d"
    Width="500"
    Height="400"
    ResizeMode="NoResize"
    ExtendsContentIntoTitleBar="True">

    <ui:FluentWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:WpfUiDictionary />
                <ResourceDictionary Source="../Resources/ResourceDictionaries/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ui:FluentWindow.Resources>

    <Grid>
        <DockPanel>
            <ui:TitleBar
                DockPanel.Dock="Top"
                Height="30"
                Title="Revit Translator | Settings"
                ShowMaximize="False"
                ShowMinimize="False" />
            <Button
                DockPanel.Dock="Bottom"
                Content="{Binding ButtonText}"
                Command="{Binding SaveSettingsCommand}"
                Style="{StaticResource LargeRectangularButton}" />
            <DockPanel
                Margin="20">

                <StackPanel
                    DockPanel.Dock="Top">
                    <ui:TextBlock
                        Text="DeepL API key:"
                        FontTypography="Body" />
                    <ui:TextBox
                        Text="{Binding DeeplApiKey, 
                            UpdateSourceTrigger=PropertyChanged}"
                        Height="40"
                        Margin="0 10"
                        ToolTip="Insert your DeepL API key here" />
                    <CheckBox
                        Content="I'm using paid DeepL API plan"
                        IsChecked="{Binding IsPaidPlan,
                            Mode=TwoWay,
                            UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <Rectangle
                    DockPanel.Dock="Top"
                    HorizontalAlignment="Stretch"
                    Fill="LightGray"
                    Height="1"
                    Margin="0 15" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Grid.Column="0"
                        Orientation="Vertical">
                        <ui:TextBlock
                            Text="From:"
                            Style="{StaticResource Annotation}" />
                        <ComboBox
                            ItemsSource="{Binding 
                                Source={x:Static languageModels:DeeplLanguageCodes.TargetLanguages}}"
                            DisplayMemberPath="VisibleName"
                            IsEnabled="{Binding SelectedSourceLanguage,
                                Converter={x:Static converters:Converters.ObjectNotNullBoolConverter},
                                Mode=TwoWay,
                                UpdateSourceTrigger=PropertyChanged}"
                            SelectedItem="{Binding SelectedSourceLanguage,
                                Mode=TwoWay,
                                UpdateSourceTrigger=PropertyChanged}"
                            ScrollViewer.VerticalScrollBarVisibility="Auto" />
                        <CheckBox
                            Content="Detect language"
                            VerticalAlignment="Top"
                            Margin="0 10 0 0"
                            Padding="3 -1 0 0"
                            IsThreeState="False"
                            IsChecked="{Binding IsAutoDetectChecked}"
                            ToolTip="Enable language auto-detect"
                            Cursor="Hand" />
                    </StackPanel>
                    <StackPanel
                        Grid.Column="1"
                        Orientation="Vertical">
                        <ui:TextBlock
                            Style="{StaticResource Annotation}" />
                        <ui:Button
                            Height="36"
                            Width="36"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Content="{markup:SymbolIcon ArrowUndo16}"
                            Command="{Binding SwitchLanguagesCommand}"
                            IsEnabled="{Binding IsAutoDetectChecked, 
                            Converter={x:Static converters:Converters.InverseBoolConverter}}"
                            ToolTip="Reverse language selection"
                            Cursor="Hand" />
                    </StackPanel>
                    <StackPanel
                        Grid.Column="2"
                        Orientation="Vertical">
                        <ui:TextBlock
                            Text="To:"
                            Style="{StaticResource Annotation}" />
                        <ComboBox
                            Foreground="Black"
                            ItemsSource="{Binding 
                                Source={x:Static languageModels:DeeplLanguageCodes.TargetLanguages}}"
                            DisplayMemberPath="VisibleName"
                            SelectedItem="{Binding SelectedTargetLanguage}"
                            ScrollViewer.VerticalScrollBarVisibility="Auto" />
                        <TextBlock
                            DockPanel.Dock="Bottom"
                            HorizontalAlignment="Right"
                            TextAlignment="Right"
                            Margin="0 15 0 0"
                            VerticalAlignment="Top"
                            Style="{StaticResource Annotation}">
                            <Run Text="Developed by" />
                            <Hyperlink
                                Command="{Binding OpenLinkedinCommand}"
                                CommandParameter="https://www.linkedin.com/in/ilia-krachkovskii/">
                                <Run Text="Ilia Krachokvskii" />
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </DockPanel>
        </DockPanel>

    </Grid>

</ui:FluentWindow>